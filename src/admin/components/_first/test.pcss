.avatar-component {
	display: flex;
	align-items: center;
}
.image {
	width: 50px;
	height: 50px;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 10px;
}
img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}
.username {
	font-weight: 600;
	font-size: 18px;
	line-height: 25px;
	color: $text-color;

}
.bordered {
	box-shadow: 0 0 10px 0 slateblue;

}