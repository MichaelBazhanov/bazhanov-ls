mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`).default;
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=`sprite.svg#${icon.id.replace('-usage', '')}`)

mixin image(path, className)
  img(src=require(`images/${path}`).default class=className)

mixin nav(className, allClass, items, activeItem)
  nav(class=`${className} ${allClass}`)
    ul(class=`${className}__list`)
      each item, index in items
        li(class=`${className}__item `+ ( (index == activeItem) ? `${className}__item-active` : '') )
          if index == 0
            a(class=`${className}__link` href='#about')= item
          else if index == 1
            a(class=`${className}__link` href='#values')= item
          else if index == 2
            a(class=`${className}__link` href='#works')= item
          else if  index == 3
            a(class=`${className}__link` href='#reviews')= item

mixin socials(items)
  ul.socials
    //- ["insta","github","vk","envelope"]
    each item in items
      li.socials__item
        if item === 'insta'
          a(href=`${'#'}` target="_blank", rel="noopener noreferrer").socials__link
            +icon(item, 'socials__icon')
        if item === 'github'
          a(href="https://github.com/MichaelBazhanov", target="_blank", rel="noopener noreferrer").socials__link
            +icon(item, 'socials__icon')
        if item === 'vk'
          a(href=`${'#'}` target="_blank", rel="noopener noreferrer").socials__link
            +icon(item, 'socials__icon')
        if item === 'envelope'
          a(href=`${item === 'envelope' ? 'mailto:michaelbazhanov33@gmail.com' : '#'}`).socials__link
            +icon(item, 'socials__icon')

mixin image4(path1, path2, path3, path4, className)
  - var img1 = require(`images/${path1}`).default
  - var img2 = require(`images/${path2}`).default
  - var img3 = require(`images/${path3}`).default
  - var img4 = require(`images/${path4}`).default
    img(src=`${img1}` alt="img" class=className srcset=`${img1} 320w, ${img2} 768w, ${img3} 1200w, ${img4} 1800w`)

