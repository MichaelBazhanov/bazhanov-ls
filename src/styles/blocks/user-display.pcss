.user-display {
	display: flex;
}
.user-display__avatar-style {
	width: 75px;
	height: 75px;
	border-radius: 50%;
	overflow: hidden;
	border: none;
}
.user--display__pic {
	object-position: center;
	object-fit: cover;
}
.user-display__data {
	margin-left: 30px;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.user-display__name {
	font-weight: bold;
	font-size: 18px;
}
.user-display__occ {
	font-weight: 600;
	color: rgba($text-color, .5)
}