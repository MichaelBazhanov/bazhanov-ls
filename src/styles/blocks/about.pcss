.about {
	position: relative;
	@include tablets {
		font-size: 14px;
	}
}
.about__bg {
	display: none;
	z-index: -1;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	object-position: center;
	object-fit: cover;
	@include desktop {
		display: block;
	}

}
.about__container {
	display: flex;
	justify-content: center;
	padding-top: 160px;
	padding-bottom: 270px;
	margin-top: 400px;

	@include desktop {
		margin-top: 0px;
	}
	@include tablets {
		padding-top: 8px;
		padding-bottom: 150px;
	}
	@include phones {
		flex-direction: column;
		padding-bottom: 128px;
	}

}
.about__user {
	width: 360px;

	@include desktop {
		width: 40%;
	}
	@include phones {
		width: 100%;
	}
}
.about__content {
	width: 600px;
	padding-left: 50px;

	@include desktop {
		width: 60%;;
	}
	@include phones {
		width: 100%;
		padding-left: 0;
		padding-top: 45px;
	}
}

.about__desc {
	font-weight: 600;
	font-size: 16px;
	margin-bottom: 20px;
	color: rgba($text-color, .8);

	@include tablets {
		font-size: 14px;
	}
}
.about__title {
	font-weight: 700;
	font-size: 36px;
	margin-bottom: 30px;
	color: $text-color;
}
.about__text-info {
	font-weight: 600;
	margin-bottom: 80px;
	color: rgba($text-color, .8);
	@include phones {
		margin-bottom: 60px;
	}
}
.about__ps {
	font-weight: 600;
	color: rgba($text-color, .8);
	font-style: italic;
	position: relative;
	&:after {
		content: "*";
		position: absolute;
		left: -50px;
		top: -16px;
		color: $text-color-4;
		font-style: italic;
		font-size: 48px;
		@include phones {
			left: -30px;
		}
	}
}