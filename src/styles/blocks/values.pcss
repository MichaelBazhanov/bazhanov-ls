.values {
	/* background: $bg-1 url('~images/bg/hands.png') 50% 50% / contain no-repeat; */
	background-color: $bg-1;
	/* background-image: url('~images/bg/hands.png');
	background-size: 662px 983px;
	background-position: 0% 18%;
	background-repeat: no-repeat; */
	position: relative;
}
.values__container {
	padding-top: 144px;
	padding-bottom: 80px;
	margin-top: -1px;
}
.values__title {
	position: relative;
	z-index: 1;
	max-width: 600px;
	text-align: left;
	margin: 0 auto;
}
.values__title-text {
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 50px;
}
.values__title-content {
	color: rgba($text-color, .8);
}
.values__bg {
	z-index: -1;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	object-position: top;
	object-fit: cover;
}
.values__img {
	position: absolute;
	left: 0;
	top: 15%;
}
.values__widget {
	position: relative;
	z-index: 1;
}