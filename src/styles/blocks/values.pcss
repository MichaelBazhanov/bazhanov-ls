.values__container {
	padding-top: 144px;
}
.values__title {
	position: relative;
	max-width: 600px;
	text-align: left;
	margin: 0 auto;
}
.values__title-text {
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 50px;
}
.values__title-content {
	color: rgba($text-color, .8);
}
.values__img {
	position: absolute;
	left: 0;
	top: 144px;
	width: 662px;
	height: 983px;
	background: url('~images/bg/hands.png') 50% 50% / cover no-repeat;
}
.values__widget {
	position: relative;
}